generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  username       String   @unique
  email          String   @unique
  password       String
  profilePicture String
  role           UserRole @default(USER)
  refreshToken   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  reservedTours Reservation[]
}

enum UserRole {
  USER
  ADMIN
}

model Tour {
  id          String   @id @default(uuid())
  name        String
  city        String
  price       Int
  description String
  address     String
  map         String
  photo       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reservations Reservation[]
}

model Reservation {
  id         String            @id @default(uuid())
  name       String
  phone      String
  email      String
  ticket     Int
  subtotal   Int
  reservedAt DateTime
  status     ReservationStatus @default(BOOKED)
  createdAt  DateTime          @default(now())
  userId     String
  tourId     String

  user User @relation(fields: [userId], references: [id])
  tour Tour @relation(fields: [tourId], references: [id])

  @@index([userId])
  @@index([tourId])
}

enum ReservationStatus {
  BOOKED
  DONE
  CANCELED
}
